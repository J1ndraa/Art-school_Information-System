@{
    ViewData["Title"] = "EditAccount";
}

@model ArtSchool.Models.Person

<link rel="stylesheet" href="@Url.Content("~/css/site.css")" asp-append-version="true" />

<h1 class="mb-4 text-center">Účet</h1>

<div class="card m-auto" style="width: 22rem; border-radius: 1rem;">
    <i class="bi bi-person-circle m-auto d-block" style="font-size: 3rem;"></i>
    <div class="card-body">
        <h5 class="card-title">Informace o uživateli</h5>
        <p class="card-text">Zde je možné si prohlédnout či upravit své osobní údaje.</p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Jméno: @Model.Firstname</li>
        <li class="list-group-item">Příjmení: @Model.Surname</li>
        <li class="list-group-item">Email: @Model.Email</li>
        <li class="list-group-item">Role: @Model.User_role</li>
    </ul>
    <div class="card-body d-flex justify-content-center align-items-center">
        <a asp-controller="Account" asp-action="Edit" class="card-link">
            <btn class="edit btn">
                Upravit informace
            </btn>
        </a>
    </div>
</div>