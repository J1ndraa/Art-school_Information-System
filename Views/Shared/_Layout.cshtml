<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ArtSchool</title>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="@Url.Content("~/css/site.css")" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.10.1/main.min.css" rel="stylesheet" />
 
    <style>
        nav {
			background-image: url(@Url.Content("~/images/nav_bg.jpg"));
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
		}
    </style>
</head>
<body class="d-flex flex-column min-vh-100 m-0 p-0">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid px-3">
                <form asp-controller="Account" asp-action="RedirectToDashboard" method="post" class="d-inline">
                    <button type="submit" class="rounded nav-link text-light bg-opacity-25 bg-white border-0 mx-2 pt-3">
                   <h5> Umělecká Škola Políčka </h5>
                    </button>
                </form>
                <div class="ms-auto d-inline-flex">
                    <a asp-controller="Account" asp-action="Index" class="rounded nav-link border-0 mx-2 ms-auto black_bg d-flex align-items-center">
                        <img src="~/images/user_icon.png" alt="User" width="20" />
                    </a>
                    <div class="text-light">
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <!--make button for sign out-->
                                <form asp-controller="LoginPage" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="rounded nav-link text-light black_bg border-0 mx-2 px-2">
                                        Odhlásit se
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="flex-grow-1 w-100 m-0 p-0">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted black_bg py-3 px-3 mt-auto">
        <div class="text-light">
            &copy; 2024 - Umělecká_Škola_Políčka
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation.unobtrusive/3.2.13/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.10.1/main.min.js"></script>

    <script src="@Url.Content("~/js/site.js")" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
