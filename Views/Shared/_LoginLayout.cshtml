<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ArtSchool</title>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="@Url.Content("~/css/site.css")" asp-append-version="true" />

    <style>
        body {
            background-image: url(@Url.Content("~/images/login_page.jpg"));
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }
    </style>
</head>

<body class="d-flex flex-column min-vh-100 m-0 p-0">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark black_bg box-shadow mb-3">
            <div class="container-fluid px-3">
                <a class="navbar-brand logospace" asp-area="" asp-controller="LoginPage" asp-action="Index">Umělecká Škola Políčka</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex text-light">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <!--make button for login and sign up, both will popup a modal window-->
                            <button type="button" class="rounded nav-link text-light black_bg border-0 mx-2"
                              data-toggle="modal" data-target="#ModalLogin">Přihlášení</button>
                        </li>
                        <li class="nav-item">
                            <button type="button" class="rounded nav-link text-light black_bg border-0 mx-2"
                              data-toggle="modal" data-target="#ModalRegister">Registrace</button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="flex-grow-1 w-100 m-0 p-0">
        <main role="main">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted black_bg py-3 px-3 mt-auto">
        <div class="text-light">
            &copy; 2024 - Umělecká_Škola_Políčka
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation.unobtrusive/3.2.13/jquery.validate.unobtrusive.min.js"></script>


    <script src="@Url.Content("~/js/site.js")" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
